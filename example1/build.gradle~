apply plugin: 'announce'

println "Starting up"

task greetings (dependsOn: ['hello', 'welcome']) {
	println "create task"
	doLast {
		println "  Enjoy."
announce.announce("finished", "local")
	}
}

task hello

hello {
	doFirst {
		print "Hello "
	}
}

task welcome << {
	print ", welcome to gradle."
}
